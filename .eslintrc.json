{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "no-param-reassign": 1,
    "no-restricted-syntax": 1,
    "prefer-destructuring": 1,
    "sort-keys": [
      1,
      "asc",
      {
        "caseSensitive": true,
        "natural": false
      }
    ],
    "sort-vars": [
      1,
      {
        "ignoreCase": true
      }
    ]
  }
}
